        <Image Name="image" HorizontalAlignment="Left" Height="238" VerticalAlignment="Top" Width="350"  Margin="0,27,0,0" />
        <Separator Margin="0" HorizontalAlignment="Center"/>
        <Label Content="UserName:" HorizontalAlignment="Left" Margin="370,88,0,0" VerticalAlignment="Top"/>
        <TextBox Name="username" HorizontalAlignment="Left" Height="23" Margin="370,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="256"/>
        <Button Content="Continue" HorizontalAlignment="Left" Margin="540,190,0,0" VerticalAlignment="Top" Width="86" Click="Button_Click"/>
        <Label Name="error" Content="" Foreground="Red" HorizontalAlignment="Left" Margin="370,144,0,0" VerticalAlignment="Top" FontSize="12"  Width="256" Height="27"></Label>
        <Label Name="pass" Content="" Foreground="Green" HorizontalAlignment="Left" Margin="370,221,0,0" VerticalAlignment="Top" FontSize="12"  Width="256" Height="27"/>

    </Grid>
</UserControl>
